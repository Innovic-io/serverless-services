{
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "error",
            { "allow": [
                    "info",
                    "error"
                ]
            }
        ],
        "no-tabs": 0
    }
}